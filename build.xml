<?xml version="1.0" encoding="utf-8" ?>

<project name="OrderMeal" default="build" basedir=".">

	<property name="name" value="OrderMeal" />

	<!-- 代码相关路径 -->
	<property name="src.dir" value="${basedir}/src" />
	<property name="lib.dir" value="${basedir}/WebRoot/WEB-INF/lib" />

	<!-- 编译好的，放在release目录下面 -->
	<property name="release.dir" value="${basedir}/release" />
	<property name="release.classes.dir" value="${release.dir}/classes" />

	
	<path id="compile.classpath">
		<fileset dir="${lib.dir}" includes="**/*.jar"/>
	</path>
	
	<target name="clean" description="Remove all generated files.">
		<delete dir="${release.dir}" />
	</target>

	<target name="initdir" description="mkdir">
		<mkdir dir="${release.dir}" />
		<mkdir dir="${release.classes.dir}" />
	</target>

	<target name="compile">
		<javac encoding="utf-8" srcdir="${src.dir}" destdir="${release.classes.dir}" classpathref="classpath" />
	</target>
	
	<target name="clean-build" depends="clean,initdir"/>
	
	<target name="build" depends="clean-build,compile"/>

</project>